<h1>Address Book</h1>
@if (Model.Count == 0)
{
  <h3>You dont currently have any contacts.</h3>
}
@foreach (var contact in Model)
{
  <h3><a href="/contact/@contact.GetId()">@contact.GetName()</a></h3>
}

<a href="/contact/new">Create a new Contact</a>
<form action="contacts_cleared" method="post">
  <button type="submit" name="button">Clear all contacts</button>
</form>
